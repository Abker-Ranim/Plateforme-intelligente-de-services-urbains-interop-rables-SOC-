# ============ Étape 1 : Compilation + génération des classes gRPC ============
FROM maven:3.9.10-eclipse-temurin-17 AS builder
WORKDIR /app

# Copie d'abord les fichiers Maven pour profiter du cache
COPY pom.xml .
COPY src ./src

# Compile et génère les classes .proto → Java + gRPC
RUN mvn -B clean package -DskipTests

# ============ Étape 2 : Image finale légère ============
FROM eclipse-temurin:17-jre-alpine

RUN addgroup -g 1001 -S appgroup && \
    adduser -u 1001 -S appuser -G appgroup

WORKDIR /app

# Copie du JAR exécutable
COPY --from=builder /app/target/emergency-service-0.0.1-SNAPSHOT.jar app.jar

USER appuser

# Port HTTP Spring Boot (actuator)
EXPOSE 8084
# Port gRPC
EXPOSE 9090

HEALTHCHECK --interval=30s --timeout=3s --start-period=60s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8084/actuator/health || exit 1

ENTRYPOINT ["java", "-jar", "/app/app.jar"]